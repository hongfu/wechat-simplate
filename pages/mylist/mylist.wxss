/* pages/infos/infos.wxss */
.avatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.weui-panel__bd{
  background-color: #eeeeee;
  margin: 20rpx;
  border-radius: 20rpx;
}
.weui-panel::before,.weui-panel::after{
  content: none;
}

.weui-media-box__title{
  padding-bottom: 16rpx;
  font-size: 44rpx;
}
.weui-media-box__desc{
  padding-bottom: 16rpx;
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}
.weui-media-box__info{
  line-height: 60rpx;
  font-size: 28rpx;
}
.weui-media-box__info__meta{
  font-size: 32rpx;
}

.img-single {
  float: left;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  width: 100%;
  height: 400rpx;
  background: no-repeat 50%;
  background-size: cover;
}
.img-single-row {
  float: left;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  width: 46%;
  height: 300rpx;
  background: no-repeat 50%;
  background-size: cover;
}

.img-double-rows {
  float: left;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
  width: 198rpx;
  height: 198rpx;
  background: no-repeat 50%;
  background-size: cover;
}

.mylist-item-btns-group{
  position: relative;
  display: flex;
  padding-bottom: 20rpx;
}

.manage-status-group{
  padding: 24rpx;
  display: flex;
  flex-direction: row;
}